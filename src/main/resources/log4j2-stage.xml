<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="com.sweetk.iitp">
    <Include resource="log4j2-common.xml"/>
    
    <Loggers>
        <!-- 애플리케이션 로그 -->
        <Logger name="com.sweetk.iitp" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        
        <!-- QueryDSL 로그 -->
        <Logger name="com.querydsl" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        
        <!-- Hibernate SQL 로그 -->
        <Logger name="org.hibernate.SQL" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration> 